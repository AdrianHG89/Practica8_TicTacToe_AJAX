!!!
%html
    %head
        %title Practica 7 - Juego Tic Tac Toe

        %link{href: "/css/bootstrap.css", rel: "stylesheet", type: "text/css"}/
        %link{href: "/css/bootstrap.min.css", rel: "stylesheet", type: "text/css"}/
        %link{href: "/css/bootstrap-responsive.css", rel: "stylesheet", type: "text/css"}/
        %link{href: "/css/bootstrap-responsive.min.css", rel: "stylesheet", type: "text/css"}/ 
        %link{href: "//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css", rel: "stylesheet"}/
        %link{:rel=>"stylesheet", :href=>"css/style.css", :type=>"text/css"}
        %script{:type=>"text/javascript", :src=>"http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"}
        %script{:type=>"text/javascript", :src=>"/js/app.js"}
    %body
        .navbar.navbar-inverse.nav
            .navbar-inner
                .container
                    %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
                        %span.icon-bar
                        %span.icon-bar
                        %span.icon-bar
                    %a.brand{href: ""} Jugo Tic Tac Toe
                    .nav-collapse.collapse
                        %ul.nav
                            %li.divider-vertical
                            %li
                                %a{href: "/"}
                                    %i.icon-th.icon-white
                                    Juego
                            %li.divider-vertical
                            %li
                                %a{href: "/usuarios"}
                                    %i.icon-list.icon-white
                                    Ranking
                            %li.divider-vertical
                            .pull-right
                                %ul.nav.pull-right
                                    -if (!usuario)
                                        %form.form-search{:action=>"/",:method=>"post"}
                                            .input-append
                                                %input{:type=>"text",:name=>"usuario[username]",:placeholder=>"Nombre Usuario"}
                                                %input{:type=>"hidden",:name=>"usuario[partidas_ganadas]",:value=>"0"}
                                                %input{:type=>"hidden",:name=>"usuario[partidas_perdidas]",:value=>"0"}
                                                %input{:type=>"hidden",:name=>"usuario[partidas_empatadas]",:value=>"0"}
                                                %input{:type=>"hidden",:name=>"usuario[partidas_jugadas]",:value=>"0"}                 
                                                %button.btn{type: "submit", :value=>"Jugar!"} Jugar!
                                    -else
                                        %form.form-search.right{:action=>"/",:method=>"post"}
                                            %ul.nav.nav-pills.nav-stacked
                                                %li
                                                    %h4
                                                        %a{href: "#"}
                                                            Hola #{usuario}
                                            %input{:type=>"hidden",:value=>"1",:name=>"logout"}
                                            %button.btn{:type=>"submit",:value=>"Salir"} Salir
        = yield
